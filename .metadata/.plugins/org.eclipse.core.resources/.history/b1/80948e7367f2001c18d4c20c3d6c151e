package lesson5Package;

public class W4 {

	public static void main(String[] args) {
		int a = 1;
		int b = 28;
		
		// сумма цифр числа
		int count = 0;
		int sum = 0;
		for (int i = b; i > a; i /= 10) {
			sum += b % 10;
			b /= 10;
			
			for (int j = 1; b > j; j++) {
				b /= j;
				if (b == sum) {
					System.out.println(a);
				}
			}
			

		}
		System.out.printf("сумма цифр числа = %d", sum);
		
		// все делители


		
		
//		int count = 0;
//		int sum = 0;
//		for (int i = b; i > a; i /= 10) {
//			sum += b % 10;
//			b /= 10;
//
//		}
//		System.out.printf("сумма цифр числа = %d", sum);


		

	}

}
